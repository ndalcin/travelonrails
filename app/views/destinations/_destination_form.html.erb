<%= form_for @destination do |f| %>

  <% if @destination.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @destination.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "City" %>
    <br>
    <%= f.text_field :city %>
  </div><br>
  <div class="field">
    <%= f.label "Country" %>
    <br>
    <%= f.text_field :country %>
  </div>
  <br>
  <%= f.submit :id => "submit_destination" %>
<% end %>
